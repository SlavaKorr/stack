<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
      $('.answer-info').html('<%= j message %>');
    <% end %>
<% else %>
$('.question-info').html('<%= j 'Question created!' %>');
  <% publish_to "/questions/#{@question.id}/answers" do %>
  $('.questions').append('<%= j render @question, locals: {question: @question} %>');
  <% end %>
<% end %>